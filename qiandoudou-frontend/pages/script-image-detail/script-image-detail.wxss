/* pages/script-image-detail/script-image-detail.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  color: white;
}

/* 剧本头部信息 */
.script-header {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.script-info {
  display: flex;
  align-items: flex-start;
}

.script-cover {
  position: relative;
  margin-right: 30rpx;
}

.cover-image {
  width: 160rpx;
  height: 200rpx;
  border-radius: 15rpx;
}

.follower-count {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.script-details {
  flex: 1;
  padding-top: 10rpx;
}

.script-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #fff;
}

.script-meta {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.script-empty {
  height: 20rpx;
}

.chapter-selector {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.chapter-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.chapter-item.active {
  background: rgba(255, 255, 255, 0.3);
  border-color: #fff;
  color: #fff;
  font-weight: bold;
}

.chapter-item.locked {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.4);
  cursor: not-allowed;
}

.lock-icon {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 20rpx;
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 章节内容 */
.chapter-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.chapter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.chapter-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.chapter-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.chapter-status.completed {
  background: #e8f5e8;
  color: #52c41a;
  border: 2rpx solid #52c41a;
}

.chapter-status.pending {
  background: #fff2e8;
  color: #fa8c16;
  border: 2rpx solid #fa8c16;
}

/* 图片内容 */
.chapter-image {
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.content-image {
  width: 100%;
  height: 400rpx;
}

/* 文案内容 */
.chapter-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #555;
  margin-bottom: 40rpx;
  text-align: justify;
}

/* 选项区域 */
.choices-section {
  margin-bottom: 40rpx;
}

.choices-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.choices-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.choice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border: 3rpx solid #e6e6e6;
  border-radius: 15rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.choice-item.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.choice-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.choice-price {
  font-size: 30rpx;
  color: #667eea;
  font-weight: bold;
}

.choice-item.selected .choice-text {
  color: #667eea;
}

/* 转入按钮 */
.transfer-section {
  text-align: center;
  margin-top: 40rpx;
}

.transfer-button {
  width: 100%;
  line-height: 70rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.transfer-button.enabled {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
}

.transfer-button.disabled {
  background: #ccc;
  color: #999;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
}

.back-button text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}
