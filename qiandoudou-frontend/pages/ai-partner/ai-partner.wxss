/* pages/ai-partner/ai-partner.wxss */
.container {
  min-height: calc(100vh - 90px);
  background: #f5f5f5;
  padding: 20px;
  padding-bottom: 20px;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 30px;
}

.header-title {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.header-subtitle {
  font-size: 14px;
  color: #999;
}

/* AI伴侣列表 */
.partner-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.partner-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  align-items: flex-start;
  gap: 15px;
  border: 2px solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.partner-card.selected {
  border-color: #409EFF;
  box-shadow: 0 4px 16px rgba(64, 158, 255, 0.2);
}

.partner-avatar {
  position: relative;
  flex-shrink: 0;
}

.avatar-image {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  background: #f0f0f0;
}

.selected-icon {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 20px;
  height: 20px;
  background: #409EFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 12px;
  font-weight: bold;
}

.partner-info {
  flex: 1;
}

.partner-name {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.partner-desc {
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12px;
}

.partner-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.tag {
  background: #f0f9ff;
  color: #409EFF;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20px;
  background: white;
  border-top: 1px solid #e0e0e0;
  z-index: 9999;
}

.confirm-btn-wrapper {
  width: 100%;
  height: 50px;
  background: #409EFF;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 10000;
  touch-action: manipulation;
}

.confirm-btn-wrapper[data-disabled="true"] {
  background: #c0c4cc;
  pointer-events: none;
}

.confirm-btn {
  width: 100%;
  height: 100%;
  background: transparent;
  color: white;
  border: none;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 500;
  pointer-events: none;
}

.confirm-btn-wrapper:active {
  background: #337ecc;
}

.confirm-btn[disabled] {
  background: transparent;
}
