/* pages/wallet-messages/wallet-messages.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 88rpx 32rpx 32rpx 32rpx; /* 考虑状态栏高度 */
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 10;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.back-icon {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon::after {
  content: '‹';
  font-size: 96rpx;
  color: #000000e6;
  font-weight: 300;
  margin-left: -12rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000e6;
  margin-left: -14rpx;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #409EFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 消息列表 */
.messages-list {
  padding: 0;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 2rpx;
}

.message-item:active {
  background-color: rgba(0, 0, 0, 0.02);
}

/* 左侧用户头像 */
.user-avatar-container {
  margin-right: 24rpx;
  flex-shrink: 0;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 48rpx;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 中间内容区域 */
.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 24rpx;
}

/* 用户名称 */
.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  line-height: 44rpx;
  margin-bottom: 8rpx;
}

/* 互动内容 */
.interaction-content {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.7);
  line-height: 40rpx;
  margin-bottom: 12rpx;
}

/* 消息元信息 */
.message-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.source {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.4);
  line-height: 34rpx;
}

.time {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.4);
  line-height: 34rpx;
}

/* 右侧动态图片 */
.post-image-container {
  flex-shrink: 0;
  width: 96rpx;
  height: 96rpx;
}

.post-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #f0f0f0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.4);
  line-height: 34rpx;
  max-width: 480rpx;
}
