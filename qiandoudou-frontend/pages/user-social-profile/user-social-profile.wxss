/* pages/user-social-profile/user-social-profile.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #ffffff 22%);
  padding-bottom: 60rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #409EFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.22);
  position: relative;
  z-index: 10;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.back-icon::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-left: 2rpx solid #000;
  border-top: 2rpx solid #000;
  transform: rotate(-45deg);
  top: 50%;
  left: 50%;
  margin-top: -6rpx;
  margin-left: -6rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
}

.nav-right {
  width: 60rpx;
}

/* 用户信息区域 */
.user-info-section {
  padding: 40rpx 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar-container {
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 72rpx;
  background: linear-gradient(135deg, #fa6402 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.user-avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 68rpx;
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  margin-bottom: 8rpx;
}

.user-description {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
  text-align: center;
}

/* 社交统计 */
.social-stats {
  display: flex;
  align-items: center;
  gap: 64rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.9);
  line-height: 44rpx;
}

.stat-label {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 4rpx;
}

/* 编辑资料按钮 */
.edit-profile-btn {
  width: 160rpx;
  height: 48rpx;
  background: rgba(13, 13, 13, 0.02);
  border: 2rpx solid rgba(0, 0, 0, 0.04);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-text {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.6);
}

/* 内容区域 */
.section {
  margin: 16rpx 32rpx 0;
}

/* 最后一个section添加底部边距 */
.section:last-child {
  margin-bottom: 60rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
}

.recent-follow {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.recent-text {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
}

.arrow-icon::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-right: 2rpx solid #000;
  border-top: 2rpx solid #000;
  transform: rotate(45deg);
  top: 50%;
  left: 50%;
  margin-top: -4rpx;
  margin-left: -4rpx;
}

/* 钱包列表 */
.wallet-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 公开钱包卡片 */
.wallet-card.public-wallet {
  width: 100%;
  height: 296rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
}

.wallet-bg {
  width: 100%;
  height: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  position: relative;
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.wallet-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 44rpx;
}

.wallet-description {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 34rpx;
  margin-top: 8rpx;
}

.wallet-amount {
  color: #ffffff;
  line-height: 44rpx;
  display: flex;
  margin-top: 12px;
  align-items: baseline;
}

.amount-symbol {
  font-size: 32rpx;
  font-weight: 500;
}

.amount-number {
  font-size: 60rpx;
  font-weight: 600;
}



.wallet-social-stats {
  display: flex;
  align-items: center;
  gap: 48rpx;
  margin-top: 16rpx;
}

.social-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 32rpx;
  font-weight: 800;
  color: #ffffff;
  line-height: 44rpx;
}

.stat-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 34rpx;
}

/* 关注的钱包列表 */
.followed-wallet-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  overflow-x: auto;
  min-height: 188rpx;
  padding-bottom: 40px;
}

/* 关注钱包列表默认左对齐 */

/* 关注的钱包卡片 */
.followed-wallet-card {
  flex-shrink: 0;
  width: 48%;
  height: 188rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
}

.followed-wallet-bg {
  width: 100%;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.followed-participant-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 14rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #ffffff;
}

.followed-wallet-title {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  height: 40rpx;
  white-space: nowrap;
  padding-right: 30px;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #ffffff;
}

.followed-wallet-amount {
  line-height: 34rpx;
  margin-top: 16rpx;
  display: flex;
  align-items: baseline;
}

.followed-amount-symbol {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}

.followed-amount-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.followed-fans-count {
  font-size: 20rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 28rpx;
  margin-top: 8rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  width: 100%;
}

/* 关注钱包列表中的空状态 */
.followed-wallet-list .empty-state {
  flex: 1;
  min-width: 100%;
  padding: 60rpx 40rpx;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}
.do_btn {
  display: flex;
}

