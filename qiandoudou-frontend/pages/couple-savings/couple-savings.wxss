/* pages/couple-savings/couple-savings.wxss */
.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  position: relative;
}

/* 全屏背景图 */
.fullscreen-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1;
}



/* 上半部分：内容展示区域 */
.main-display {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  padding-top: calc(60rpx + env(safe-area-inset-top));
  background: transparent;
  overflow: hidden;
  z-index: 10;
}

/* 人物信息居中显示在腰身位置（上移150px） */
.partner-info-center {
  position: absolute;
  left: 50%;
  top: calc(60% - 150px);
  transform: translateX(-50%);
  text-align: center;
  z-index: 15;
  width: 80%;
}

.partner-name-large {
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  display: block;
  margin-bottom: 30rpx;
  letter-spacing: 4rpx;
}

.partner-tags-center {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.tag-pill {
  padding: 12rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.partner-desc-center {
  font-size: 32rpx;
  color: white;
  line-height: 1.5;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
  font-weight: 400;
  margin-bottom: 50rpx;
  transform: translateY(-10rpx);
}



/* 邀请按钮（居中在签名下方，下移10px） */
.invite-btn-center {
  width: 336rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fee085 0%, #fff2c2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  margin: 10rpx auto 0;
  position: relative;
  z-index: 20;
  pointer-events: auto;
}

/* 修复后的邀请按钮 - 确保层级正确 */
.invite-btn-center-fixed {
  width: 336rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fee085 0%, #fff2c2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  margin: 10rpx auto 0;
  position: relative;
  z-index: 50;
  pointer-events: auto;
}

.invite-btn-center:active,
.invite-btn-center-fixed:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #fdd764 0%, #ffeaa1 100%);
}

.invite-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 头像轮播区域（无背景框，更底部位置，下移105px） */
.avatar-section-overlay {
  position: fixed;
  bottom: -175rpx;
  left: 0;
  right: 0;
  padding: 60rpx 0 80rpx;
  padding-bottom: calc(80rpx + env(safe-area-inset-bottom));
  z-index: 10;
}

/* 头像轮播 */
.avatar-swiper {
  height: 500rpx;
  margin-bottom: 40rpx;
}

.avatar-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-container {
  position: relative;
  transition: all 0.3s ease;
  transform: scale(0.8);
  opacity: 0.6;
}

.avatar-container.active {
  transform: scale(1);
  opacity: 1;
}

.avatar-image {
  width: 244rpx;
  height: 365rpx;
  border-radius: 40rpx;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.4);
}

.avatar-container.active .avatar-image {
  width: 254rpx;
  height: 380rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.5);
}





/* 响应式适配 */
@media (max-width: 375px) {
  .partner-name-large {
    font-size: 68rpx;
    letter-spacing: 2rpx;
  }
  
  .tag-pill {
    font-size: 24rpx;
    padding: 10rpx 24rpx;
  }
  
  .partner-desc-center {
    font-size: 28rpx;
  }
  
  .avatar-image {
    width: 195rpx;
    height: 292rpx;
    border-radius: 32rpx;
  }
  
  .avatar-container.active .avatar-image {
    width: 203rpx;
    height: 304rpx;
    border-radius: 32rpx;
  }
}



