/* pages/couple-savings/couple-savings.wxss */
.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  position: relative;
}

/* 全屏背景图 */
.fullscreen-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1;
}



/* 上半部分：内容展示区域 */
.main-display {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  padding-top: calc(60rpx + env(safe-area-inset-top));
  background: transparent;
  overflow: hidden;
  z-index: 10;
}

/* 人物信息居中显示在腰身位置（上移150px） */
.partner-info-center {
  position: absolute;
  left: 50%;
  /* top: calc(60% - 150px); */
  bottom: 0;
  transform: translateX(-50%);
  text-align: center;
  z-index: 15;
  width: 80%;
}

.partner-name-large {
  height:168rpx;
  line-height:168rpx;
  font-family:Songti SC;
  font-weight:900;
  color:rgba(255, 255, 255, 0.9);
  font-size:120rpx;
  text-align:center;
}

.partner-tags-center {
  display: flex;
  justify-content: center;
  margin: 60rpx 0 30rpx 0;
}

.tag-pill {
  font-family:PingFang SC;
  color:rgba(255, 255, 255, 0.9);
  padding: 8rpx 28rpx;
  font-size:24rpx;
  height:48rpx;
  line-height: 48rpx;
  background:rgba(255, 255, 255, 0.2);
  border:1px solid;
  border-color:#ffffff;
  border-radius:16rpx;
}

.partner-desc-center {
  font-family:PingFang SC;
  font-size:36rpx;
  text-align:center;
  color: #ffffff;
}



/* 邀请按钮（居中在签名下方，下移10px） */
.invite-btn-center {
  width: 336rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fee085 0%, #fff2c2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  margin: 10rpx auto 0;
  position: relative;
  z-index: 20;
  pointer-events: auto;
}

/* 修复后的邀请按钮 - 确保层级正确 */
.invite-btn-center-fixed {
  margin-top: 36rpx;
  width:444rpx;
  height:96rpx;
  background:linear-gradient(180deg,#fee085 0%,#fff2c2 100%);
  border-radius:44rpx;
  /* width: 336rpx;
  height: 80rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  /* box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2); */
  transition: all 0.3s ease;
  margin: 0 auto;
  margin-top: 36rpx;
  /* position: relative; */
  z-index: 50;
  pointer-events: auto;
}

.invite-btn-center:active,
.invite-btn-center-fixed:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #fdd764 0%, #ffeaa1 100%);
}

.invite-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 头像轮播区域（无背景框，更底部位置，下移105px） */
.avatar-section-overlay {
  /* position: fixed;
  bottom: -175rpx; */
  left: 0;
  right: 0;
  /* padding-bottom: calc(74rpx + env(safe-area-inset-bottom)); */
  z-index: 10;
  height: 426rpx;
}

/* 头像轮播 */
.avatar-swiper {
  height: 426rpx;
  margin-bottom: 40rpx;
}

.avatar-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-container {
  position: relative;
  transition: all 0.3s ease;
  transform: scale(0.8);
  opacity: 0.6;
}

.avatar-container.active {
  transform: scale(1);
  opacity: 1;
}

.avatar-image {
  width: 218rpx;
  height: 292rpx;
  border-radius: 40rpx;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.4);
}

.avatar-container.active .avatar-image {
  width: 218rpx;
  height: 292rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.5);
}





/* 响应式适配 */
@media (max-width: 375px) {
  .partner-name-large {
    font-size: 68rpx;
    letter-spacing: 2rpx;
  }
  
  .tag-pill {
    font-size: 24rpx;
    padding: 10rpx 24rpx;
  }
  
  .partner-desc-center {
    font-size: 28rpx;
  }
  
  .avatar-image {
    width: 195rpx;
    height: 292rpx;
    border-radius: 32rpx;
  }
  
  .avatar-container.active .avatar-image {
    width: 203rpx;
    height: 304rpx;
    border-radius: 32rpx;
  }
}



