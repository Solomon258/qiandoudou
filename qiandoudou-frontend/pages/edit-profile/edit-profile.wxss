/* pages/edit-profile/edit-profile.wxss */
.container {
  min-height: 100vh;
  background: #f2f3f7;
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background: #ffffff;
  position: relative;
  z-index: 10;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.back-icon::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-left: 2rpx solid #000;
  border-top: 2rpx solid #000;
  transform: rotate(-45deg);
  top: 50%;
  left: 50%;
  margin-top: -6rpx;
  margin-left: -6rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
}

.nav-right {
  width: 60rpx;
}

/* 分组标题 */
.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.6);
  margin: 32rpx 32rpx 16rpx 32rpx;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  margin: 0 32rpx 24rpx 32rpx;
  overflow: hidden;
}

.info-card.single-item {
  margin-bottom: 40rpx;
}

/* 信息项 */
.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  min-height: 88rpx;
  box-sizing: border-box;
  transition: background-color 0.2s ease;
}

.item-label {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
}

.item-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-value {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
  text-align: right;
}

.item-value.placeholder {
  color: rgba(0, 0, 0, 0.4);
}

/* 头像预览 */
.avatar-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 36rpx;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 上传加载状态 */
.upload-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 36rpx;
}

.upload-loading .loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 箭头图标 */
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
}

.arrow-icon::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-right: 2rpx solid rgba(0, 0, 0, 0.4);
  border-top: 2rpx solid rgba(0, 0, 0, 0.4);
  transform: rotate(45deg);
  top: 50%;
  left: 50%;
  margin-top: -4rpx;
  margin-left: -6rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #f0f0f0;
  margin-left: 32rpx;
}

/* 开关控件 */
.switch-control {
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.info-item:active {
  background-color: rgba(0, 0, 0, 0.02);
}

/* 弹窗遮罩 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗内容 */
.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 640rpx;
  max-width: 90vw;
  max-height: 80vh;
  overflow: hidden;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.6);
}

/* 弹窗主体 */
.modal-body {
  padding: 32rpx;
}

/* 输入框组 */
.input-group {
  position: relative;
}

.edit-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  box-sizing: border-box;
}

.edit-input:focus {
  border-color: #409EFF;
}

.input-counter {
  position: absolute;
  right: 16rpx;
  bottom: -40rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
}

/* 性别选项 */
.gender-options {
  display: flex;
  gap: 24rpx;
}

.gender-option {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  background: #ffffff;
  transition: all 0.3s ease;
}

.gender-option.selected {
  border-color: #409EFF;
  background: #f0f8ff;
  color: #409EFF;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.cancel-btn {
  background: #f5f5f5;
  color: rgba(0, 0, 0, 0.6);
  border: none;
}

.confirm-btn {
  background: #409EFF;
  color: #ffffff;
  border: none;
}

.cancel-btn::after, .confirm-btn::after {
  border: none;
}
