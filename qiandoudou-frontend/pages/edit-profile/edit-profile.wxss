.wechat-avatar-picker-btn::after {
  border: none;
}

.wechat-avatar-picker-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.wechat-nickname-picker-input {
  width: 400rpx;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: #495057;
  text-align: center;
  transition: all 0.3s ease;
}

.wechat-nickname-picker-input:focus {
  border-color: #07c160;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}