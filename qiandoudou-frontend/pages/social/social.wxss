/* pages/social/social.wxss */
.container {
  min-height: 100vh;
  background: #f2f3f7;
  position: relative;
}

/* 测试按钮 */
.test-section {
  padding: 16px;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.test-btn {
  padding: 12px 20px;
  background: #409EFF;
  border-radius: 8px;
  text-align: center;
}

.test-btn:active {
  background: #337ecc;
  transform: scale(0.98);
}

.test-text {
  font-size: 14px;
  color: #fff;
  font-weight: 500;
}

/* 测试钱包卡片 */
.test-wallet-card {
  margin-top: 12px;
  border-radius: 8px;
  overflow: hidden;
}

.test-wallet-bg {
  padding: 16px;
  color: white;
  position: relative;
}

.test-wallet-title {
  font-size: 16px;
  font-weight: 600;
  display: block;
  margin-bottom: 8px;
}

.test-wallet-desc {
  font-size: 12px;
  opacity: 0.9;
  display: block;
  margin-bottom: 12px;
}

.test-wallet-amount {
  font-size: 20px;
  font-weight: 700;
  text-align: right;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 44px 16px 16px 16px; /* 考虑状态栏高度 */
  background: #fff;
}

.nav-left {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 20px;
  height: 20px;
  position: relative;
}

.back-icon::before {
  content: '';
  position: absolute;
  width: 8px;
  height: 8px;
  border-left: 2px solid #000;
  border-bottom: 2px solid #000;
  transform: rotate(45deg);
  top: 50%;
  left: 50%;
  margin-top: -4px;
  margin-left: -2px;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #000000e6;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

.user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.user-avatar:active {
  transform: scale(0.95);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
}

.nav-right .avatar-text {
  font-size: 14px;
  color: #fff;
  font-weight: 600;
}

/* 测试样式 - 让头像更明显 */
.test-avatar {
  background: #ff4444 !important;
  border: 3px solid #fff !important;
  box-shadow: 0 0 10px rgba(255, 68, 68, 0.5) !important;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.notification-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bell-icon {
  width: 20px;
  height: 20px;
  position: relative;
}

.bell-icon::before {
  content: '';
  position: absolute;
  width: 14px;
  height: 14px;
  border: 2px solid #666;
  border-radius: 50% 50% 0 0;
  top: 2px;
  left: 3px;
}

.bell-icon::after {
  content: '';
  position: absolute;
  width: 4px;
  height: 2px;
  background: #666;
  border-radius: 2px;
  bottom: 2px;
  left: 8px;
}

/* 动态列表 */
.posts-scroll {
  height: calc(100vh - 140px); /* 减去顶部导航和底部导航高度 */
  padding: 16px;
}

.empty-state {
  text-align: center;
  padding: 60px 20px;
}

.empty-icon {
  font-size: 48px;
  display: block;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 动态卡片 */
.post-card {
  position: relative;
  width: 343px;
  height: 309px;
  margin-bottom: 16px;
  border-radius: 12px;
  overflow: hidden;
  background: #fff;
}

.post-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.fans-badge {
  position: absolute;
  top: 16px;
  left: 16px;
  background: rgba(0, 0, 0, 0.24);
  color: #fff;
  font-size: 10px;
  font-weight: 500;
  padding: 3px 8px;
  border-radius: 10px;
  border: 1px solid #fff;
  z-index: 3;
}

.post-content-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.33) 33.27%, #ffffff 100%);
  padding: 16px;
  z-index: 2;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
}

.post-title {
  font-size: 16px;
  font-weight: 600;
  color: #000000e6;
  max-width: 200px;
}

.post-amount {
  font-size: 18px;
  font-weight: 800;
  color: #000000e6;
  text-align: right;
}

.post-tags {
  margin-bottom: 16px;
}

.tag {
  font-size: 12px;
  color: #00000099;
  margin-right: 8px;
}

.description {
  font-size: 12px;
  color: #00000099;
}

/* 用户互动 */
.interactions {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.interaction-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.interaction-item .user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.interaction-item .avatar-text {
  font-size: 12px;
  color: #666;
}

.interaction-content {
  flex: 1;
  background: #f0f8ff;
  padding: 8px 12px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.user-name {
  font-size: 12px;
  color: #000000e6;
  font-weight: 500;
}

.message {
  font-size: 12px;
  color: #000000e6;
  flex: 1;
}

.amount-change {
  font-size: 12px;
  color: #ee6811;
  font-weight: 800;
}

/* 参与人数 */
.participants {
  position: absolute;
  bottom: 16px;
  right: 16px;
  background: rgba(0, 0, 0, 0.1);
  color: #00000099;
  font-size: 10px;
  font-weight: 500;
  padding: 2px 8px;
  border-radius: 10px;
  z-index: 3;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 89px;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.nav-icon {
  width: 24px;
  height: 24px;
  position: relative;
}

/* 钱兜兜图标 */
.wallet-icon {
  width: 24px;
  height: 24px;
  background: #A6A6A6;
  position: relative;
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
}

.wallet-icon::before {
  content: '';
  position: absolute;
  top: 2px;
  left: 50%;
  width: 8px;
  height: 4px;
  background: #A6A6A6;
  border-radius: 4px 4px 0 0;
  transform: translateX(-50%);
}

.wallet-icon::after {
  content: '¥';
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 10px;
  color: #fff;
  transform: translate(-50%, -50%);
}

/* 兜圈圈图标（激活状态） */
.social-icon {
  width: 25px;
  height: 25px;
  background: #FF6B35;
  border-radius: 50%;
  position: relative;
}

.social-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 10px;
  height: 10px;
  background: #FFF3E0;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.nav-text {
  font-size: 14px;
  font-weight: 500;
  color: #00000033;
}

.nav-item.active .nav-text {
  color: #000;
  font-weight: 500;
}